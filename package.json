{
  "name": "pambo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "node scripts/ensure-port-3000.mjs && vite --port 3000 --strictPort",
    "build": "npm run quality && vite build",
    "build:frontend": "vite build",
    "build:backend": "echo 'Backend uses Supabase Edge Functions - no npm build needed'",
    "typecheck": "tsc -p tsconfig.frontend.json --noEmit",
    "lint": "eslint \"App.tsx\" \"index.tsx\" \"components/**/*.{ts,tsx}\" \"contexts/**/*.{ts,tsx}\" \"hooks/**/*.{ts,tsx}\" \"pages/**/*.{ts,tsx}\" \"src/**/*.{ts,tsx}\" \"config/**/*.ts\" \"types/**/*.ts\" \"constants.ts\" \"vite.config.ts\" \"capacitor.config.ts\"",
    "format:check": "prettier --check \"App.tsx\" \"index.tsx\" \"components/**/*.{ts,tsx,css}\" \"contexts/**/*.{ts,tsx}\" \"hooks/**/*.{ts,tsx}\" \"pages/**/*.{ts,tsx}\" \"src/**/*.{ts,tsx,css}\" \"config/**/*.ts\" \"types/**/*.ts\" \"constants.ts\" \"vite.config.ts\" \"capacitor.config.ts\"",
    "test": "vitest run --passWithNoTests",
    "quality": "npm run typecheck && npm run lint && npm run format:check && npm run test",
    "deploy:functions": "supabase functions deploy",
    "db:review-rls:show": "node scripts/review-rls-tools.mjs show",
    "db:review-rls:verify": "node scripts/review-rls-tools.mjs verify",
    "cap:sync": "npm run build && npx cap sync",
    "cap:assets": "npx @capacitor/assets generate",
    "cap:prepare": "npm run cap:assets && npm run cap:sync",
    "cap:open:android": "npx cap open android",
    "cap:open:ios": "npx cap open ios",
    "preview": "vite preview"
  },
  "dependencies": {
    "@capacitor/android": "^8.1.0",
    "@capacitor/core": "^8.1.0",
    "@capacitor/ios": "^8.1.0",
    "@google/genai": "^1.40.0",
    "@sentry/react": "^10.39.0",
    "@supabase/supabase-js": "^2.96.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.563.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.14.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.24",
    "dotenv": "^17.3.1",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.25.0",
    "vite": "^6.2.0",
    "vitest": "^1.6.0"
  }
}
